<div class="pf2e-perception point-out">
    <h4 class="action">
        <span class="pf2-icon larger">A</span>
        <strong>{{localize name}}</strong>
    </h4>
    <div class="tags">
        {{#each traits as |trait|}}
        <span class="tag" data-slug="{{trait.slug}}" data-description="{{trait.tooltip}}">
            {{localize trait.name}}
        </span>
        {{/each}}
    </div>
    <hr>
    <section class="roll-note">{{description}}</section>
</div>